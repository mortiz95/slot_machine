<div class="jumbotron">
    <div class="card-body border">
        <div class="col-md-12">
            {{#each values}}
            <div class="d-flex justify-content-between border">
                <div class=""><img alt="Slot 1" id="poster" src="/images/{{val1}}"></div>
                <div class=""><img alt="Slot 2" id="poster" src="/images/{{val2}}"></div>
                <div class=""><img alt="Slot 3" id="poster" src="/images/{{val3}}"></div>
            </div>
            <div class="row d-none">
                <div class="col-md-12">
                    <span id="hasBonus">{{bonus}}</span>
                </div>
            </div> 
            <div class="d-flex justify-content-center bd-highlight mb-3 mt-5">
                <a href="/play/create" class="btn btn-primary border"><img alt="Spin" src="/images/button.png"></a>
            </div>
            <div class="d-flex justify-content-center bd-highlight mt-5">
                  <h4>{{winType}}</h4>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>

    let hasBonus = parseInt($('#hasBonus').html()) 
    if(hasBonus)
    setTimeout(function(){ window.location.href = "./create"; }, 1000);

</script>